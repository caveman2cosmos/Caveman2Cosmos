	<options id="CityBar" file="BUG City Bar.ini">
		<section id="Bar">
			<option id="AirportIcons" key="Airport Icons" 
					type="boolean" default="True"/>
					
			<option id="StarvationTurns" key="Starvation Turns" 
					type="boolean" default="True"/>
		</section>
		
		<section id="Hover">
			<option id="Health" key="Health" 
					type="boolean" default="True"/>
			<option id="Happiness" key="Happiness" 
					type="boolean" default="True"/>
					
			<option id="HurryAnger" key="Hurry Anger" 
					type="boolean" default="True"/>
			<option id="DraftAnger" key="Draft Anger" 
					type="boolean" default="True"/>
					
			<option id="FoodAssist" key="Food Assist" 
					type="boolean" default="True"/>
			<option id="BaseValues" key="Base Values" 
					type="boolean" default="True"/>
			<option id="BaseProduction" key="Base Production" 
					type="boolean" default="True"/>
			<option id="BuildingActualEffects" key="Building Actual Effects" 
					type="boolean" default="True"/>
					
			<option id="HurryAssist" key="Hurry Assist" 
					type="boolean" default="True"/>
			<option id="HurryAssistIncludeCurrent" key="Hurry Assist Include Current" 
					type="boolean" default="False"/>
					
			<option id="TradeDetail" key="Trade Detail" 
					type="boolean" default="True"/>
			<option id="Commerce" key="Commerce" 
					type="boolean" default="True"/>
					
			<option id="BuildingIcons" key="BuildingIcons" 
					type="boolean" default="True"/>
					
			<option id="CultureTurns" key="Culture Turns" 
					type="boolean" default="True"/>
			<option id="GreatPersonTurns" key="Great Person Turns" 
					type="boolean" default="True"/>
					
			<option id="Specialists" key="Specialists" 
					type="boolean" default="True"/>
			<option id="RevoltChance" key="Revolt Chance" 
					type="boolean" default="True"/>
					
			<option id="HideInstructions" key="Hide Instructions" 
					type="boolean" default="True"/>
		</section>
		
		<section id="Plot Status">
			<option id="CityControlledPlots" key="City Controlled Plots" 
					type="boolean" default="True" dirtyBit="ColoredPlots" dll="6"/>
					
			<option id="CityPlotStatus" key="City Plot Status" 
					type="boolean" default="True" dirtyBit="ColoredPlots" dll="6"/>
			<option id="WorkingImprovedPlot" key="Working Improved Plot" 
					type="boolean" default="False" dirtyBit="ColoredPlots" dll="6"/>
			<option id="WorkingImprovablePlot" key="Working Improvable Plot" 
					type="boolean" default="True" dirtyBit="ColoredPlots" dll="6"/>
			<option id="WorkingImprovableBonusPlot" key="Working Improvable Bonus Plot" 
					type="boolean" default="True" dirtyBit="ColoredPlots" dll="6"/>
			<option id="WorkingUnimprovablePlot" key="Working Unimprovable Plot" 
					type="boolean" default="True" dirtyBit="ColoredPlots" dll="6"/>
			<option id="NotWorkingImprovedPlot" key="Not Working Improved Plot" 
					type="boolean" default="True" dirtyBit="ColoredPlots" dll="6"/>
			<option id="NotWorkingImprovablePlot" key="Not Working Improvable Plot" 
					type="boolean" default="True" dirtyBit="ColoredPlots" dll="6"/>
			<option id="NotWorkingImprovableBonusPlot" key="Not Working Improvable Bonus Plot" 
					type="boolean" default="True" dirtyBit="ColoredPlots" dll="6"/>
			<option id="NotWorkingUnimprovablePlot" key="Not Working Unimprovable Plot" 
					type="boolean" default="False" dirtyBit="ColoredPlots" dll="6"/>
		</section>
	</options>
