<?xml version="1.0" encoding="iso-8859-1"?>
<!-- Sid Meier's Civilization 4 Beyond the Sword -->
<!-- Caveman2Cosmos mod -->
<!-- megafauna Units  -->
<!--                 -->
<!-- These are units based on the animal named in the folder.       -->
<!--                 -->
<!--  These are compatible with your selection of animals in the animals folder.              -->
<!--                 -->
<!--   If you dont have the animal selected then its megafauna units will not be in game even if you have selected them here.        -->
<!--                 -->
<Civ4ModularLoadControls xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="..\..\..\Xml\Schema\Caveman2Cosmos.xsd">
	<DefaultConfiguration>Megafauna_Units</DefaultConfiguration>
	<ConfigurationInfos>
		<ConfigurationInfo>
			<Type>Megafauna_Units</Type>
			<Description>Control which mega fauna combat units are available in the game</Description>
			<Modules>
				<Module>
					<Directory>Bear</Directory>
					<bLoad>1</bLoad>
				</Module>
				<Module>
					<Directory>Big_Cats</Directory>
					<bLoad>1</bLoad>
				</Module>
				<Module>
					<Directory>Bison_Rider</Directory>
					<bLoad>1</bLoad>
				</Module>
				<Module>
					<Directory>DeerRider</Directory>
					<bLoad>1</bLoad>
				</Module>
				<Module>
					<Directory>Giraffe</Directory>
					<bLoad>1</bLoad>
				</Module>
				<Module>
					<Directory>Mapinguari</Directory>
					<bLoad>1</bLoad>
				</Module>
				<Module>
					<Directory>Rhinoceros</Directory>
					<bLoad>1</bLoad>
				</Module>
				<Module>
					<Directory>Llama</Directory>
					<bLoad>1</bLoad>
				</Module>
				<Module>
					<Directory>Mammoths</Directory>
					<bLoad>1</bLoad>
				</Module>
				<Module>
					<Directory>Zebra_Mounts</Directory>
					<bLoad>1</bLoad>
				</Module>
			</Modules>
		</ConfigurationInfo>
	</ConfigurationInfos>
</Civ4ModularLoadControls>